generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* =========================
   USER & AUTH
========================= */

model User {
  id             String   @id @default(uuid())
  name           String?
  nickname       String
  phoneNumber    String   @unique
  password       String

  points         Int      @default(0)

  address        String?
  addressNote    String?
  houseImage     String[]

  role           Role     @default(USER)
  isVerified     Boolean  @default(false)
  sessionVersion Int      @default(1)
  isActive       Boolean  @default(true)

  updatedAt      DateTime @default(now()) @updatedAt
  createdAt      DateTime @default(now())

  stoves         Stove[]
  orders         Order[]
  carts          Cart[]
  refreshTokens  RefreshToken[]
}

/* =========================
   REFRESH TOKEN
========================= */

model RefreshToken {
  id                   String   @id @default(uuid())
  userId               String
  tokenHash            String   @unique
  replacedByTokenHash  String?

  revoked              Boolean  @default(false)
  expiresAt            DateTime
  lastUsedAt           DateTime?

  createdAt            DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/* =========================
   OTP
========================= */

model PhoneOtp {
  id        String   @id @default(uuid())
  phone     String
  code      String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone])
}

/* =========================
   CATEGORY
========================= */

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  freeShip  Boolean  @default(false)
  bindable  Boolean @default(false)

  products  Product[]
}

/* =========================
   PRODUCT
========================= */

model Product {
  id            String      @id @default(uuid())
  productName   String
  currentPrice  Int
  pointValue    Int         @default(0)

  categoryId    String
  category      Category    @relation(fields: [categoryId], references: [id])

  tags          ProductTag[]

  updatedAt     DateTime    @default(now()) @updatedAt
  createdAt     DateTime    @default(now())

  orderItems    OrderItem[]
  cartItems     CartItem[]
  priceHistory  ProductPriceHistory[]
  stoves        Stove[]
}

/* =========================
   PRODUCT PRICE HISTORY
========================= */

model ProductPriceHistory {
  id        String   @id @default(uuid())
  productId String
  price     Int
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

/* =========================
   STOVE
========================= */

model Stove {
  id         String   @id @default(uuid())
  name       String   @default("")
  userId     String
  productId  String   
  address    String
  note       String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
  orders     Order[]

  @@index([userId])
  @@index([productId])
}

/* =========================
   CART
========================= */

model Cart {
  id        String    @id @default(uuid())
  userId    String
  type      CartType @default(NORMAL)
  isActive  Boolean  @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  items     CartItem[]

  @@index([userId])
}

/* =========================
   CART ITEM
========================= */

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String

  quantity  Int
  isFree    Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

/* =========================
   ORDER
========================= */

model Order {
  id         String      @id @default(uuid())
  userId     String
  stoveId    String?
  type       OrderType   @default(NORMAL)

  totalPrice Int
  status     OrderStatus @default(PENDING)
  note        String?

  updatedAt  DateTime    @default(now()) @updatedAt
  createdAt  DateTime    @default(now())

  user       User        @relation(fields: [userId], references: [id])
  stove      Stove?      @relation(fields: [stoveId], references: [id])

  items      OrderItem[]
}

/* =========================
   ORDER ITEM
========================= */

model OrderItem {
  id            String   @id @default(uuid())
  orderId       String
  productId     String

  quantity      Int
  unitPrice     Int
  pointsEarned  Int      @default(0)
  isFree        Boolean  @default(false)

  updatedAt     DateTime @default(now()) @updatedAt
  createdAt     DateTime @default(now())

  order         Order    @relation(fields: [orderId], references: [id])
  product       Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

/* =========================
   ENUMS
========================= */

enum Role {
  USER
  ADMIN
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  READY
  DELIVERING
  COMPLETED
  CANCELLED
}

enum OrderType {
  NORMAL
  EXCHANGE
}

enum CartType {
  NORMAL
  EXCHANGE
}

enum ProductTag {
  POINTS_EXCHANGABLE
}
